# .env.example
OPENAI_API_KEY=sk-REPLACE_ME
USE_OPENAI=False            # Set True to use OpenAI embeddings and LLM.
USE_LLM=True                # Set False to disable LLM calls for debugging.
USE_LANGCHAIN=True          # If you prefer LangChain wrappers, set True.
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL_NAME=gpt-4        # or gpt-3.5-turbo
CHUNK_SIZE=800
CHUNK_OVERLAP=100
TOP_K=4
RELEVANCE_THRESHOLD=0.25
PERSIST_INDEX=False         # Enable to save/load FAISS index across runs.
INDEX_DIR=./indices
INDEX_TYPE=flat             # Or 'hnsw' for approximate search.
HNSW_M=32                   # Controls neighbor links if using HNSW.
HNSW_EF_CONSTRUCTION=200    # Index construction parameter for HNSW.
LOG_LEVEL=DEBUG             # Logging verbosity (DEBUG, INFO, WARNING)
